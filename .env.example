# Environment Configuration for Water Department Agent
# Copy this to .env and fill in your values

# ========== DATABASE ==========
DB_HOST=localhost
DB_PORT=5432
DB_NAME=departments
DB_USER=tarang54
DB_PASSWORD=password

# ========== LLM ==========
# Provider: openai or local
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-xxxxxxxxxxxx
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3

# ========== AGENT ==========
DEPARTMENT=water
MAX_PLANNING_ATTEMPTS=3
CONFIDENCE_THRESHOLD=0.7

# ========== HEALTH AGENT (optional) ==========
# Set DEPARTMENT=health or use separate service to run health agent
HEALTH_CONFIDENCE_THRESHOLD=0.65
HEALTH_DATA_SOURCE=
HEALTH_DB_HOST=localhost
HEALTH_DB_PORT=5432
HEALTH_DB_NAME=health_departments
HEALTH_DB_USER=health_user
HEALTH_DB_PASSWORD=change_me

# ========== LOGGING ==========
LOG_LEVEL=INFO

